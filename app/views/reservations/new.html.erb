<h3>Book New Reservation</h3>


<%= form_for @reservation do |f| %>
<%= f.label :location %>
<%= f.text_field :location %>
<%= f.label :capacity %>
<%= f.number_field :capacity %>
<%= f.label :price %>
<%= f.number_field :price %>
<%= f.label :datetime %>
<%= f.text_field :datetime %>
<%= f.collection_select :user_id, User.all, :id, :username, prompt: true%>
<%= f.collection_select :activity_id, Activity.all, :id, :title, prompt: true%>
<%= f.submit "Confirm Reservation" %>
<% end %>
